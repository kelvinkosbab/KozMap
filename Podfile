
target 'KozMap' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  platform :ios, '11.0'

  # Pods for KozMap
  pod 'Alamofire', '~> 4.5'
  pod 'Solar'
  pod 'DeviceKit', '~> 1.3'

  # Analytics
  pod 'Firebase'
  pod 'Firebase/Core'
  pod 'Firebase/Database'

  # Crashlytics
  pod 'Fabric'
  pod 'Crashlytics'
end
